# =============================================================================
# SAA BUILDING BLOCKS PLATFORM - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# =============================================================================

# =============================================================================
# CORE SUPABASE CONFIGURATION (Required)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# APPLICATION URLS (Required)
# =============================================================================
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXTAUTH_URL=https://your-domain.com

# =============================================================================
# JWT AUTHENTICATION (Required for auth)
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_ACCESS_SECRET=your-access-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here

# =============================================================================
# CLOUDFLARE R2 STORAGE (Required for media uploads)
# =============================================================================
CLOUDFLARE_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://assets.your-domain.com
CLOUDFLARE_R2_API_TOKEN=your-r2-api-token

# =============================================================================
# WORDPRESS API (Required for blog)
# =============================================================================
NEXT_PUBLIC_WORDPRESS_API_URL=https://wp.your-domain.com/wp-json/wp/v2
WORDPRESS_URL=https://wp.your-domain.com
WORDPRESS_USER=your-wordpress-user
WORDPRESS_APP_PASSWORD=your-wordpress-app-password

# =============================================================================
# GOHIGHLEVEL CRM (Optional - for CRM integration)
# =============================================================================
GOHIGHLEVEL_API_KEY=your-ghl-api-key
GOHIGHLEVEL_LOCATION_ID=your-location-id
ENABLE_GOHIGHLEVEL=false

# =============================================================================
# EMAIL SERVICE - RESEND (Optional - for transactional emails)
# =============================================================================
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=Agent Portal <noreply@your-domain.com>
EMAIL_REPLY_TO=support@your-domain.com
ENABLE_ACTIVATION_EMAILS=false

# =============================================================================
# GITHUB DEPLOYMENT (Optional - for CI/CD)
# =============================================================================
GITHUB_TOKEN=your-github-token
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name

# =============================================================================
# API AUTHENTICATION (Internal endpoints)
# =============================================================================
API_BASIC_AUTH_USER=api_user
API_BASIC_AUTH_PASSWORD=your-secure-password

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW=900000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
DEBUG_EMAILS=false
ACTIVATION_TOKEN_EXPIRY_HOURS=24

# =============================================================================
# NODE CONFIGURATION
# =============================================================================
NODE_OPTIONS="--max-old-space-size=2048"
NEXT_TELEMETRY_DISABLED=1
