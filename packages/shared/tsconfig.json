{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["node", "styled-jsx"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "styled-jsx.d.ts",
    "components/saa/**/*.ts",
    "components/saa/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx",
    "master-controller/**/*.ts",
    "master-controller/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "components/ui/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
