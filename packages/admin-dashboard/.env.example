# ============================================================================
# GoHighLevel Configuration
# ============================================================================

# GoHighLevel API Key (Personal Access Token)
# Get from: GoHighLevel Dashboard → Settings → API → Personal Access Token
GOHIGHLEVEL_API_KEY=pit-492db3c0-cdeb-4004-8de2-56e4491cd2e0

# GoHighLevel Location ID
# Get from: GoHighLevel Dashboard → Settings → Company → Location ID
GOHIGHLEVEL_LOCATION_ID=your-location-id-here

# ============================================================================
# Supabase Configuration
# ============================================================================

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================================================
# Application URLs
# ============================================================================

NEXT_PUBLIC_APP_URL=https://saabuildingblocks.com
NEXT_PUBLIC_API_URL=https://saabuildingblocks.com/api

# ============================================================================
# Email Configuration (Optional)
# ============================================================================

# Fallback email sender if GoHighLevel is not available
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@saabuildingblocks.com
SMTP_PASSWORD=your-smtp-password

# ============================================================================
# Security
# ============================================================================

# JWT Secret for token signing
JWT_SECRET=your-jwt-secret-here

# Activation token expiry (in hours)
ACTIVATION_TOKEN_EXPIRY_HOURS=24

# ============================================================================
# Feature Flags
# ============================================================================

# Enable GoHighLevel integration
ENABLE_GOHIGHLEVEL=true

# Enable activation emails
ENABLE_ACTIVATION_EMAILS=true

# Enable email debugging
DEBUG_EMAILS=false
