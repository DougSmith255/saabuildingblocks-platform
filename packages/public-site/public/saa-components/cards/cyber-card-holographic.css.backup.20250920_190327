/**
 * SAA Cyber Card - Holographic Glitch Version
 * Features holographic effects, digital glitches, matrix rain, and chromatic aberration
 */

.saa-cyber-holo-container {
    position: relative;
    width: 100%;
    height: 340px;
    transition: 200ms;
    filter: contrast(1.1) saturate(1.2);
}

.saa-cyber-holo-card {
    position: absolute;
    inset: 0;
    z-index: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: var(--radius-lg);
    transition: all 0.8s ease;
    background:
        linear-gradient(45deg, #0a0a0a, #1a1a1a),
        repeating-linear-gradient(
            90deg,
            transparent,
            transparent 2px,
            rgba(255, 215, 0, 0.02) 2px,
            rgba(255, 215, 0, 0.02) 4px
        );
    overflow: hidden;
    box-shadow:
        0 0 30px rgba(0, 0, 0, 0.4),
        inset 0 0 30px rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

/* Greyscale Shimmer Effect */
.saa-cyber-holo-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
        45deg,
        rgba(255, 255, 255, 0.05) 0%,
        rgba(255, 255, 255, 0.12) 25%,
        rgba(255, 255, 255, 0.18) 50%,
        rgba(255, 255, 255, 0.10) 75%,
        rgba(255, 255, 255, 0.04) 100%
    );
    background-size: 400% 400%;
    animation: saa-cyber-holographic 6s ease-in-out infinite;
    opacity: 0;
    transition: opacity 0.6s ease;
    border-radius: var(--radius-lg);
    mix-blend-mode: overlay;
}

/* Chromatic Aberration Effect */
.saa-cyber-holo-card::after {
    content: '';
    position: absolute;
    inset: 2px;
    background: linear-gradient(45deg, #0a0a0a, #1a1a1a);
    border-radius: var(--radius-lg);
    filter:
        drop-shadow(2px 0 0 rgba(255, 215, 0, 0.1))
        drop-shadow(-2px 0 0 rgba(255, 255, 255, 0.1));
    animation: saa-cyber-chromatic 4s ease-in-out infinite;
    z-index: -1;
}

