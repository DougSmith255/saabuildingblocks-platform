}

/* Matrix Rain Effect */
.saa-cyber-matrix {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
    border-radius: var(--radius-lg);
    opacity: 0.6;
}

.saa-cyber-matrix::before,
.saa-cyber-matrix::after {
    content: '01001010011001010110111001100101010000110110111101100100011001010';
    position: absolute;
    color: rgba(255, 255, 255, 0.3);
    font-family: 'Courier New', monospace;
    font-size: 8px;
    line-height: 10px;
    white-space: pre-wrap;
    word-break: break-all;
    animation: saa-cyber-matrix-rain 8s linear infinite;
    width: 20px;
    text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
}

.saa-cyber-matrix::before {
    left: 20%;
    animation-delay: -2s;
}

.saa-cyber-matrix::after {
    right: 25%;
    animation-delay: -6s;
    color: rgba(255, 215, 0, 0.2);
    text-shadow: 0 0 5px rgba(255, 215, 0, 0.3);
}

/* Glitch Overlay */
.saa-cyber-glitch {
