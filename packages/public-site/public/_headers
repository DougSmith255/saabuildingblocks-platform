# Cloudflare Pages Security Headers
# Applied to all static pages served from Cloudflare Pages

/*
  # Security headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()

  # CORS for API calls to origin server
  Access-Control-Allow-Origin: https://saabuildingblocks.com
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization
  Access-Control-Allow-Credentials: true

  # DEVELOPMENT MODE: No caching to ensure fresh content
  Cache-Control: no-store, no-cache, must-revalidate, max-age=0

# HTML pages - no cache during development
/*.html
  Cache-Control: no-store, no-cache, must-revalidate, max-age=0

# CSS and JS files - no cache during development
/*.css
  Cache-Control: no-store, no-cache, must-revalidate, max-age=0

/*.js
  Cache-Control: no-store, no-cache, must-revalidate, max-age=0

/_next/*
  Cache-Control: no-store, no-cache, must-revalidate, max-age=0

# No cache for API proxied routes
/api/*
  Cache-Control: no-store, no-cache, must-revalidate

/master-controller/*
  Cache-Control: no-store, no-cache, must-revalidate

/agent-portal/*
  Cache-Control: no-store, no-cache, must-revalidate
